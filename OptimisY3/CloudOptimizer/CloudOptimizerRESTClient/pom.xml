<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>eu.optimis</groupId>
		<artifactId>CloudOptimizerPackage</artifactId>
		<version>1.0-SNAPSHOT</version>
	</parent>
	<packaging>jar</packaging>
	<artifactId>CloudOptimizerRESTClient</artifactId>
	<name>CloudOptimizerRESTClient</name>
        <dependencies>
            <dependency>
            	<groupId>log4j</groupId>
                <artifactId>log4j</artifactId>
            	<version>1.2.14</version>
            </dependency>
            <dependency>
                <groupId>net.emotivecloud</groupId>
                <artifactId>Commons</artifactId>
                <version>1.0-SNAPSHOT</version>
            </dependency>
            <dependency>
                <groupId>com.sun.jersey</groupId>
                <artifactId>jersey-client</artifactId>
                <version>1.6</version>
            </dependency>
            <dependency>
                <groupId>junit</groupId>
                <artifactId>junit</artifactId>
                <version>3.8.1</version>
                <scope>test</scope>
            </dependency>
            <dependency>
                <groupId>eu.optimis.service_manager</groupId>
                <artifactId>ServiceManagerRESTClient</artifactId>
                <version>${ServiceManagerRESTClient.version}</version>
            </dependency>
            <dependency>
                <groupId>eu.optimis.servicemanifest</groupId>
                <artifactId>service-manifest-api</artifactId>
                <version>${ServiceManifest.version}</version>
            </dependency>
            <dependency>
                <groupId>eu.optimis</groupId>
                <artifactId>BusinessDescriptor</artifactId>
                <version>${BusinessDescriptor.version}</version>
            </dependency>
            <dependency>
                <groupId>eu.optimis</groupId>
                <artifactId>DataFormats</artifactId>
                <version>${DataFormats.version}</version>
            </dependency>
        </dependencies>
	
	<build>
		<finalName>CloudOptimizerRESTClient</finalName>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.5</source>
					<target>1.5</target>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>
