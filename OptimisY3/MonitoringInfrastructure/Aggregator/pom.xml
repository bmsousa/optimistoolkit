						<version>1.0-alpha-2</version>
						<executions>
							<execution>
								<phase>initialize</phase>
								<goals>
									<goal>read-project-properties</goal>
								</goals>
								<configuration>
									<files>
										<file>../../optimis-parent/conf/IPenvironment1.TST.properties</file>
									</files>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>

				<finalName>Aggregator</finalName>

			</build>
		</profile>
