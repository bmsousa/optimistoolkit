                <updatePolicy>never</updatePolicy>
            </releases>
		</repository> 
    </repositories>
    
    <pluginRepositories>
    <pluginRepository>
        <id>packcs</id>
        <url>http://packcs-e0.scai.fraunhofer.de/archiva/repository/maven2</url>
